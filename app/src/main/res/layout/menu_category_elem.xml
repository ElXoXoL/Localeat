<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/marginSide"
    android:layout_marginEnd="@dimen/marginSide"
    android:layout_marginBottom="@dimen/marginVertical"
    android:background="@drawable/menu_group_bg"
    >

    <View
        android:id="@+id/view_menu_category_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_group_selected_bg"
        android:visibility="invisible"
        />

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/img_item_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:scaleType="centerCrop"
        app:sriv_left_top_corner_radius="@dimen/cornerRadiusLow"
        app:sriv_right_top_corner_radius="@dimen/cornerRadiusLow"
        app:sriv_right_bottom_corner_radius="@dimen/cornerRadiusLow"
        app:sriv_left_bottom_corner_radius="@dimen/cornerRadiusLow"
        />

    <com.bite.bite.views.MediumTextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingStart="@dimen/cornerRadiusLow"
        android:paddingEnd="@dimen/cornerRadiusLow"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>